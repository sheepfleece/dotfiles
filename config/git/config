[user]
	email = rowanmorrison@protonmail.ch
	name = sheepfleece

[alias]
  a = add -v
  r = restore
  s = status -s
  pl = log --pretty=format:\"%Cgreen%h%Creset - %an, %ar%n %Cblue %s %n\" 

  first = !git checkout $(git rev-list --all        | tail -n 1)
  next  = !git checkout $(git rev-list HEAD..master | tail -n 1)
  last  = !git checkout master
  prev  = !git checkout HEAD~
  
  pr    = commit --allow-empty -m \"Make pull request\"
[core]
	editor = nvim
[advice]
	detachedHead = false
  
[difftool]
    prompt = true
[merge]
	tool = vimdiff3
[diff]
	tool = vimdiff3
[difftool "vimdiff3"]
	path = nvim
